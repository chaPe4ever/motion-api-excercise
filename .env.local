# Local Development Environment Variables
# This file is for local Docker development
# DO NOT commit this file to version control (it's in .gitignore)
# Copy this to .env if you want to use it locally

# Django Settings
SECRET_KEY=dev-secret-key-change-in-production-local
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Using Docker Compose service name 'db' for local development
# motion-api uses DATABASE_URL format
DATABASE_URL=postgresql://motion_user:motion_password@db:5432/motion_db

# Database Schema (optional, for PostgreSQL)
# Leave empty to use default 'public' schema (no manual schema creation needed)
# Set to a schema name if you want to use a custom schema
DB_SCHEMA=

# Security Settings (disabled for local development)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Optional: Email configuration (if needed for local testing)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@localhost

# Optional: OpenAI (if your app uses it)
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4

# Optional: Stream Chat (if your app uses it)
# STREAM_API_KEY=
# STREAM_API_SECRET=
