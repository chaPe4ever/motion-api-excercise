# Motion API server block
# Template file - processed with envsubst during deployment
# Proxies requests to motion-api backend running on localhost:8001

upstream motion_api_backend {
    server 127.0.0.1:8001;
}

# HTTP server - handles Let's Encrypt and conditionally redirects to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name ${ALLOWED_HOSTS_DOMAIN} www.${ALLOWED_HOSTS_DOMAIN};

    # Let's Encrypt verification
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect HTTP to HTTPS only if certificates exist
    # If certificates don't exist yet, proxy to backend (for initial certbot setup)
    location / {
        # Check if certificate file exists, redirect if it does
        if (-f /etc/letsencrypt/live/${ALLOWED_HOSTS_DOMAIN}/fullchain.pem) {
            return 301 https://$host$request_uri;
        }
        # If no certificate, proxy to backend (for initial setup)
        proxy_pass http://motion_api_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ${ALLOWED_HOSTS_DOMAIN} www.${ALLOWED_HOSTS_DOMAIN};

    # SSL certificates (will be set up by certbot)
    ssl_certificate /etc/letsencrypt/live/${ALLOWED_HOSTS_DOMAIN}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/${ALLOWED_HOSTS_DOMAIN}/privkey.pem;

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    client_max_body_size 10M;

    # Proxy all requests to motion-api backend
    location / {
        proxy_pass http://motion_api_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
